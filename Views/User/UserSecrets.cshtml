@model SecretKeeper.Models.User

<div class="container mt-5">
    <h2 class="text-center">Your Secrets</h2>

    <table class="table table-bordered mt-4">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Login</th>
                <th>Password</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Secrets != null && Model.Secrets.Any())
            {
                int index = 1;
                foreach (var secret in Model.Secrets)
                {
                    <tr>
                        <td>@index</td>
                        <td>@secret.Title</td>
                        <td>@secret.Login</td>
                        <td>@secret.Password</td>
                        <td>@secret.Description</td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No secrets found.</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/User/Logout" class="btn btn-danger mt-3">Log Out</a>
</div>
